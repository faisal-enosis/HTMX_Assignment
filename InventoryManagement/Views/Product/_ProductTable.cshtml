@model List<ProductViewModel>

<table border="1" width="100%" id="product-table" class="table">
    <thead>
        <tr>
            <th width="25%">Name</th>
            <th width="25%">Desc</th>
            <th width="25%">Price</th>
            <th width="25%">Action</th>
        </tr>
    </thead>

    <tbody id="product-table-body">
        @await Html.PartialAsync("_ProductRows", Model)
    </tbody>
</table>
