@model ProductViewModel

<form hx-post="/Product/Create" hx-target="#add-product-form" hx-swap="outerHTML">
    <div class="row">
        <div class="col-8 d-flex justify-content-between">
            <div>
                <label for="Name">Name</label>
                <input name="Name" value="@Model.Name" placeholder="Enter Name" />
                <div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>


            <div>
                <label for="Desc">Desc</label>
                <input name="Description" value="@Model.Description" placeholder="Enter Description" />
            </div>

            <div>
                <label for="Price">Price</label>
                <input name="Price" value="@Model.Price" placeholder="Enter Price" />
                <div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-4 text-end">
            <button type="submit">Add Product</button>
        </div>
    </div>
</form>
